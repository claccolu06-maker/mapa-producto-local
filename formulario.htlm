<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Añadir nuevo punto - Producto Local Sevilla</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Formulario para añadir comercios y puntos de producto local en Sevilla" />
  <style>
    body {
      font-family: "Segoe UI", sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #f7f7f7;
    }
    .container {
      max-width: 600px;
      margin: auto;
      background: white;
      padding: 28px 24px;
      border-radius: 12px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.12);
    }
    h1 {
      text-align: center;
      margin-bottom: 20px;
      color: #2c3e50;
      font-size: 1.3rem;
    }
    .subtitle {
      text-align: center;
      margin-bottom: 24px;
      color: #555;
      font-size: 0.9rem;
    }
    label {
      display: block;
      margin-bottom: 4px;
      font-weight: 500;
      color: #333;
    }
    input[type="text"],
    input[type="number"] {
      width: 100%;
      padding: 8px;
      margin-bottom: 14px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }
    .precio-group {
      margin: 12px 0;
    }
    .precio-group label {
      display: inline-block;
      margin-right: 12px;
    }
    .checkbox-group {
      margin: 12px 0;
    }
    .checkbox-group label {
      margin-right: 8px;
    }
    button {
      width: 100%;
      padding: 10px;
      background-color: #2c3e50;
      color: white;
      border: none;
      border-radius: 4px;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.2s;
    }
    button:hover {
      background-color: #1a252f;
    }
    .error {
      color: #d32f2f;
      font-size: 0.85rem;
      margin-bottom: 10px;
    }
    .success {
      color: #2e7d32;
      font-size: 0.9rem;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Producto Local - Sevilla</h1>
    <p class="subtitle">
      Completa el formulario para añadir un nuevo punto al mapa
    </p>

    <div class="error" id="errorGeneral"></div>
    <div class="success" id="success"></div>

    <form id="formularioPunto">
      <label for="nombre">Nombre *</label>
      <input type="text" id="nombre" required />

      <label for="lat">Latitud (lat) *</label>
      <input type="number" id="lat" step="any" required />

      <label for="lng">Longitud (lng) *</label>
      <input type="number" id="lng" step="any" required />

      <label for="categoria">Categoría *</label>
      <input type="text" id="categoria" required />

      <label for="tipo_detalle">Tipo de detalle *</label>
      <input type="text" id="tipo_detalle" required />

      <label>Precio (1–3) *</label>
      <div class="precio-group">
        <label><input type="radio" name="precio" value="1" required /> 1</label>
        <label><input type="radio" name="precio" value="2" /> 2</label>
        <label><input type="radio" name="precio" value="3" /> 3</label>
      </div>

      <div class="checkbox-group">
        <label>
          <input type="checkbox" id="horario_abierto" />
          Horario abierto
        </label>
      </div>

      <label for="barrio">Barrio *</label>
      <input type="text" id="barrio" required />

      <label for="direccion">Dirección *</label>
      <input type="text" id="direccion" required />

      <button type="submit">Añadir punto</button>
    </form>
  </div>

  <script>
    document.getElementById("formularioPunto").addEventListener("submit", (e) => {
      e.preventDefault();

      const errorEl = document.getElementById("errorGeneral");
      const successEl = document.getElementById("success");
      errorEl.textContent = "";
      successEl.textContent = "";

      const punto = {
        nombre: document.getElementById("nombre").value.trim(),
        lat: parseFloat(document.getElementById("lat").value),
        lng: parseFloat(document.getElementById("lng").value),
        categoria: document.getElementById("categoria").value.trim(),
        tipo_detalle: document.getElementById("tipo_detalle").value.trim(),
        precio: parseInt(document.querySelector('input[name="precio"]:checked')?.value),
        horario_abierto: document.getElementById("horario_abierto").checked,
        barrio: document.getElementById("barrio").value.trim(),
        direccion: document.getElementById("direccion").value.trim(),
      };

      // Validación básica
      if (!punto.nombre || !punto.categoria || !punto.barrio || !punto.direccion) {
        errorEl.textContent = "Todos los campos obligatorios deben estar rellenos.";
        return;
      }
      if (isNaN(punto.lat) || isNaN(punto.lng)) {
        errorEl.textContent = "Latitud y longitud deben ser números.";
        return;
      }
      if (!punto.precio || punto.precio < 1 || punto.precio > 3) {
        errorEl.textContent = "Precio debe ser 1, 2 o 3.";
        return;
      }

      // Guardar en localStorage (se puede exportar luego a puntos.json)
      let puntos = [];
      try {
        const puntosStr = localStorage.getItem("puntosLocalSeville");
        if (puntosStr) {
          puntos = JSON.parse(puntosStr);
        }
      } catch (err) {
        console.error("No se pudo leer puntos de localStorage", err);
      }

      puntos.push(punto);

      try {
        localStorage.setItem("puntosLocalSeville", JSON.stringify(puntos));
        successEl.textContent = "Punto guardado correctamente. Recuerda exportarlo a puntos.json.";
        document.getElementById("formularioPunto").reset();
      } catch (err) {
        errorEl.textContent = "No se pudo guardar el punto en el navegador.";
      }
    });
  </script>
</body>
</html>
