<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A√±adir Local</title>
    <style>
        body { font-family: sans-serif; padding: 20px; background: #f4f4f4; }
        .container { max-width: 500px; margin: 0 auto; background: white; padding: 20px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); }
        input, select, button { width: 100%; padding: 10px; margin-top: 10px; }
        button { background: #28a745; color: white; border: none; cursor: pointer; }
        a { text-decoration: none; color: #007bff; }
    </style>
</head>
<body>
    <div class="container">
        <h2>üìç A√±adir Local</h2>

        <form id="form">
            <input type="text" id="nombre" placeholder="Nombre del sitio" required>

            <select id="categoria">
                <option value="Alimentaci√≥n">üõí Alimentaci√≥n</option>
                <option value="Hosteler√≠a">‚òï Hosteler√≠a</option>
                <option value="Moda">üëï Moda</option>
                <option value="Otros">üìç Otros</option>
            </select>

            <input type="text" id="lat" placeholder="Latitud" required readonly>
            <input type="text" id="lng" placeholder="Longitud" required readonly>

            <button type="submit">Guardar (Simulado)</button>
        </form>

        <a href="index.html" style="display:block; text-align:center; margin-top:15px;">Volver al mapa</a>
    </div>

    <script>
        // Rellenar lat / lng desde la URL (?lat=...&lng=...)
        const p = new URLSearchParams(window.location.search);
        document.getElementById('lat').value = p.get('lat');
        document.getElementById('lng').value = p.get('lng');

        // Guardar preferencia y volver al mapa
        document.getElementById('form').onsubmit = (e) => {
            e.preventDefault();

            const categoriaElegida = document.getElementById('categoria').value; 
            // Guardamos la preferencia sencilla para el mapa
            const pref = {
                categoriaFavorita: categoriaElegida   // "Alimentaci√≥n", "Hosteler√≠a", "Moda", "Otros"
            };
            localStorage.setItem('preferencias_mapa', JSON.stringify(pref));

            alert("¬°Guardado! (En una app real, esto ir√≠a a la base de datos)");
            window.location.href = "index.html"; // vuelve al mapa
        };
    </script>
</body>
</html>
