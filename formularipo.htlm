        };
// Llama a esta funci√≥n cuando el usuario env√≠e el formulario de preferencias
function guardarPreferenciasDesdeFormulario(event) {
    event.preventDefault(); // Evita que recargue la p√°gina

    // Lee los campos reales de TU formulario
    const categoriaFavorita = document.querySelector('input[name="categoria"]:checked')?.value || "comer";
    const barrio = document.getElementById('barrio').value || "Nervion";
    const radio = parseInt(document.getElementById('radio').value) || 1000; // en metros

    const pref = {
        categoriaFavorita: categoriaFavorita, // ej: "comer", "bar", "super"
        barrio: barrio,                       // ej: "Nervion", "Triana"
        radio: radio                          // ej: 500, 1000, 2000
    };

    localStorage.setItem('preferencias_mapa', JSON.stringify(pref));

    // Opcional: redirigir al mapa directamente
    window.location.href = "index.html"; // o la URL de tu mapa
}

// Enlaza la funci√≥n al formulario
document.getElementById('form-preferencias').addEventListener('submit', guardarPreferenciasDesdeFormulario);
    </script>
